<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343dp"
    android:layout_height="464dp"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="@drawable/background_dialog">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_dish_image"
            android:layout_width="311dp"
            android:layout_height="232dp"
            android:layout_gravity="center|top"
            android:src="@drawable/background_add_btn" />

        <ImageButton
            android:id="@+id/dialog_dismiss_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_cross"/>


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="56dp"
            android:src="@drawable/ic_like"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialog_dish_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_dish_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/add_to_basket_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_add_btn"
        android:text="Добавить в корзину"
        android:textColor="#FFFFFF"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="464dp"
    android:orientation="vertical"
    android:background="@drawable/background_dialog"
    android:paddingHorizontal="16dp"
    android:gravity="center|top">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/dialog_dish_image"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:background="@drawable/background_image_dish" />

        <ImageButton
            android:id="@+id/dialog_dismiss_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_image_btn"
            android:src="@drawable/ic_cross" />


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="56dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_like"
            android:background="@drawable/background_image_btn"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/dialog_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/dialog_dish_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sub_black"
            android:textSize="14dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_dish_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:textColor="#A6000000"/>

    <Button
        android:id="@+id/add_to_basket_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_blue_btn"
        android:layout_marginVertical="16dp"
        android:text="Добавить в корзину"
        android:textColor="#FFFFFF"/>


</LinearLayout>



